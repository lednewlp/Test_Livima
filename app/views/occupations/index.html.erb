<p id="notice"><%= notice %></p>

<h1>Occupations</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occupations.each do |occupation| %>
      <tr>
        <td><%= occupation.description %></td>
        <td><%= link_to 'Mostrar Cargo', occupation %></td>
        <td><%= link_to 'Editar', edit_occupation_path(occupation) %></td>
        <td><%= link_to 'Apagar', occupation, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


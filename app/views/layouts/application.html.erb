<!DOCTYPE html>
<html>
  <head>
    <title>Livima_Test</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="bg-dark text-white text-center mb-4 p-4">
      <%= link_to root_path, class: 'text-white' do %>
        <h1 class='display-6'>Adm Livima Test</h1>
      <% end %>
      <% if admin_signed_in? %>
        <div class="text-right">
          <%= link_to destroy_admin_session_path, method: :delete, class: 'btn btn-transparent text-white' do  %>
            <h3>Log Out</h3>
          <% end %>
        </div>
      <% end %>

    </div>
    <div class="container">
      <% flash.each do |type, message| %>
      <div class="alert alert-<%= type == 'alert' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% end %>

      <%if admin_signed_in? %>
        <div class="row">
          <div class="col-4 offset-8">
            <div class="search">
              <%= form_with url: search_lists_path, method: :get, local: true, class: 'form-inline' do |form| %>
                <div class="form-group mx-3 mb-3">
                  <%= form.search_field :q, class: 'form-control', required: true, placeholder: 'Busca', value: params[:q] %>
                </div>
                <%= form.submit 'Buscar', class: 'btn btn-primary mb-3', data: {disable_with: 'Buscando...'} %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <footer class='bg-dark text-white text-center mt-5 p-4'>
      Copyright Â© Wendel Lopes <%= Date.current.year %>.
    </footer>
  </body>
</html>

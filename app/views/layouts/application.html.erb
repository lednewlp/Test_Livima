<!DOCTYPE html>
<html>
  <head>
    <title>Livima_Test</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
      <div class="container">

        <%= link_to root_path, class: 'text-white' do %>
          <h3 class='title'>Adm Livima Test</h3>
        <% end %>
        <% if admin_signed_in? %>
          <div class="text-right">
            <%= link_to destroy_admin_session_path, method: :delete, class: 'btn btn-outline-danger btn-sm text-white' do  %>
              <h4>Log Out</h4>
            <% end %>
      </div>
        <% end %>

      </div>
    </nav>
    <div class="container">
      <% flash.each do |type, message| %>
      <div class="alert alert-<%= type == 'alert' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% end %>

      <%if admin_signed_in? %>
        <div class="row">
          <div class="col-4 offset-8">
            <div class="search mt-4">
              <%= form_with url: search_lists_path, method: :get, local: true, class: 'form-inline' do |form| %>
                <div class="form-group mx-3 mb-3">
                  <%= form.search_field :q, class: 'form-control', required: true, placeholder: 'Busca', value: params[:q] %>
                </div>
                <%= form.submit 'Buscar', class: 'btn btn-secondary mb-3', data: {disable_with: 'Buscando...'} %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <footer class='bg-dark text-white text-center mt-5 p-4'>
      Copyright Â© Wendel Lopes <%= Date.current.year %>.
    </footer>
  </body>
</html>
